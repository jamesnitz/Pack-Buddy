@model PackBuddy.Models.SharedGear

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>@ViewBag.foundGear.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequestMessage" class="control-label">Send a Message with your Request</label>
