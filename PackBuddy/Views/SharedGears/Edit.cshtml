@model PackBuddy.Models.SharedGear

@{
    ViewData["Title"] = "Edit";
}

<h4 style="text-align:center">Send A Message</h4>
<hr />
<div class="row">
    <div style="margin:auto" class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <input type="hidden" asp-for="GearId" class="form-control" />
            <input type="hidden" asp-for="ApplicationuserId" class="form-control" />
            <div class="form-group">
                <label asp-for="RequestMessage" class="control-label"></label>
                <textarea asp-for="RequestMessage" class="form-control" placeholder="..."></textarea>
                <span asp-validation-for="RequestMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

