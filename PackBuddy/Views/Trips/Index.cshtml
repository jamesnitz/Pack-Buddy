@model IEnumerable<PackBuddy.Models.Trip>

@{
    ViewData["Title"] = "Index";
}
@if (TempData.ContainsKey("tripCreated"))
{
    <div class="alert alert-success">@TempData["tripCreated"]
    @Html.ActionLink("Add Gear", "Create", "GearTrips", new { tripId = ViewBag.tripId }) 
    </div>
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="tripCardList">
    @foreach (var item in Model)
    {
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-header">@Html.DisplayFor(modelItem => item.Name)</div>
            <div class="card-body">
                <img src="~/images/trip_forest.png" />
                <h6 class="card-title">@Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate) </h6>
                @Html.ActionLink("Details", "Details", new { id = item.Id })

            </div>
        </div>
    }
</div>
