@model IEnumerable<PackBuddy.Models.Trip>

@{
    ViewData["Title"] = "Index";
}
@if (TempData.ContainsKey("tripCreated"))
{
    <div class="alert alert-success">
        @TempData["tripCreated"]
        @Html.ActionLink("Start Packing", "Create", "GearTrips", new { tripId = TempData["tripId"] })
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
}
<h1 style="text-align:center;">Your Trips</h1>
<hr />
<p>
    <a asp-action="Create"><strong>New Trip</strong></a>
</p>
<div class="tripCardList">
    @foreach (var item in Model)
    {
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-header">@Html.DisplayFor(modelItem => item.Name)</div>
            <div class="card-body">
                <img src="~/images/trip_forest.png" />
                <h6 class="card-title">@Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate) </h6>
                @Html.ActionLink("More Info", "Details", new { id = item.Id })

            </div>
        </div>
    }
</div>
